<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.facci.sqliter3mv.MainActivityMV">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtID_MMVL"
        android:textSize="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_below="@+id/txtID_MMVL"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_alignStart="@+id/txtNombre_MMVL"
        android:layout_alignEnd="@+id/txtNombre_MMVL" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombre_MMVL"
        android:textSize="20dp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:id="@+id/textView3"
        android:layout_below="@+id/txtNombre_MMVL"
        android:textSize="20dp"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtApellido_MMVL"
        android:layout_below="@+id/textView3"
        android:textSize="20dp"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recinto Electoral"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:layout_below="@+id/txtApellido_MMVL"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtRecintoElectoral_MMVL"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃ±o de Nacimiento"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAnoNacimiento_MMVL"
        android:textSize="20dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/btnIngresar_MMVL"
        android:layout_below="@+id/txtAnoNacimiento_MMVL"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:id="@+id/btnModificar_MMVL"
        android:layout_alignTop="@+id/btnIngresar_MMVL"
        android:layout_toEndOf="@+id/textView"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/btnEliminar_MMVL"
        android:layout_below="@+id/btnIngresar_MMVL"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Todos"
        android:id="@+id/btnBuscar_MMVL"
        android:textSize="25dp"
        android:layout_alignTop="@+id/btnEliminar_MMVL"
        android:layout_alignStart="@+id/textView" />

</RelativeLayout>
